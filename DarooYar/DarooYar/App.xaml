<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
    x:Class="DarooYar.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:rv="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    xmlns:theme="clr-namespace:DarooYar.Theme;assembly=DarooYar">
    <Application.Resources>

        <ResourceDictionary>


            <ResourceDictionary.MergedDictionaries>
                <theme:BaseTheme />
            </ResourceDictionary.MergedDictionaries>

            <x:Array x:Key="Datas" Type="{x:Type x:String}">
                <x:String>amir</x:String>
                <x:String>amir</x:String>
                <x:String>amir</x:String>
                <x:String>amir</x:String>
                <x:String>amir</x:String>
                <x:String>amir</x:String>
            </x:Array>
            <Style TargetType="rv:MaterialFrame">
                <Setter Property="MaterialTheme" Value="Acrylic" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="LightThemeBackgroundColor" Value="#F1F1F1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>